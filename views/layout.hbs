  <body>
  <nav id="nav">
      <ul>
          <li><a href="/">Спирали</a></li>
          <li><a href="/waveform">Линии</a></li>

      </ul>
  </nav>
    {{{body}}}
  <p id="instructions"></p>
  <h2 id="notification"> Выберите файл <br><br>
      <input type="file" id="thefile" accept="audio/*" />
  </h2>
  <br><br>
  <script>
      var nav = true;
      function onKeyDown(e) {
          switch (e.which) {
              case 78:
                  if(!nav){
                      $('nav').css('visibility','visible');
                      nav = !nav;
                  }
                  else {
                      $('nav').css('visibility','hidden');
                      nav = !nav;
                  }
          }
      }
      document.addEventListener('keydown', onKeyDown, false);
      $('#notification').velocity('fadeIn', { delay: 150, duration: 1500 });
      console.log('press "n" to toggle nav bar \n' +
              'press "c" to toggle controls');
      var stats = new Stats();
      stats.showPanel( 0 ); // 0: fps, 1: ms, 2: mb, 3+: custom
      document.body.appendChild( stats.dom );
  </script>
  <audio id="audio" controls></audio>
  </body>
</html>
